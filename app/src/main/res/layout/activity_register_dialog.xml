<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/login_textbox"
    android:gravity="center"
    android:paddingStart="48dp"
    android:paddingEnd="48dp"
    android:paddingTop="72dp"
    android:paddingBottom="72dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모든 준비가 \n끝났어요!"
        android:gravity="center"
        android:fontFamily="@font/nanumsquareeb"
        android:textSize="46sp"
        android:layout_marginBottom="42dp"
        android:textColor="@android:color/black"
        android:id="@+id/regi_dialog_txt"/>

    <Button
        android:id="@+id/regi_dialog_start"
        android:minHeight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient"
        android:text="바로 시작하기"
        android:fontFamily="@font/nanumsquareb"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="12dp"
        />

    <Button
        android:layout_marginBottom="12dp"
        android:id="@+id/regi_dialog_walk"
        android:minHeight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient"
        android:text="간단 앱 설명"
        android:textSize="16dp"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="@android:color/white"
        android:paddingStart="42dp"
        android:paddingEnd="42dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

</LinearLayout>